code = "shader_type canvas_item;

group_uniforms cloud_layer_1;
uniform sampler2D cloud_texture_1;
uniform vec2 cloud_moving_speed_1 = vec2(0.01, -0.2);

group_uniforms cloud_layer_2;
uniform sampler2D cloud_texture_2;
uniform vec2 cloud_moving_speed_2 = vec2(-0.02, -0.15);

uniform vec4 sky_color : source_color = vec4(0.53, 0.81, 0.98, 1.0);
uniform float mix_ratio : hint_range(0.0, 1.0) = 0.2;

// --- NEW SLIDER ---
uniform float transparency : hint_range(0.0, 1.0, 0.01) = 1.0;

void fragment() {
    vec2 offset1 = TIME * cloud_moving_speed_1;
    vec2 offset2 = TIME * cloud_moving_speed_2;
    vec2 uv1 = fract(UV + offset1);
    vec2 uv2 = fract(UV + offset2);

    vec4 color1 = texture(cloud_texture_1, uv1);
    vec4 color2 = texture(cloud_texture_2, uv2);
    
    // Combine layers based on mix_ratio
    vec4 combined_clouds = mix(color2, color1, mix_ratio);

    // Use the red channel (common for cloud masks) as the base alpha
    float cloud_alpha = combined_clouds.r;
    
    // Mix the sky color with the clouds based on cloud density
    vec4 final_color = mix(sky_color, combined_clouds, cloud_alpha);

    // Apply the transparency slider to the final alpha output
    final_color.a *= transparency;

    COLOR = final_color;
}"

